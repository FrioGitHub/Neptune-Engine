<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_height="match_parent"
  android:layout_width="match_parent"
  tools:context=".EditorActivity">

  <com.google.android.material.appbar.AppBarLayout
    android:id="@+id/appBar"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:elevation="0dp"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/toolbar"
      style="@style/AppTheme.Toolbar"
      android:elevation="0dp"
      android:layout_height="?attr/actionBarSize"
      android:layout_width="match_parent"
      app:popupTheme="@style/AppTheme.PopupMenu" />

  </com.google.android.material.appbar.AppBarLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/objectLayout"
    android:layout_height="0dp"
    android:layout_width="200dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/surface"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/appBar">

    <TextView
      android:id="@+id/objectsCount"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content" />

    <androidx.core.widget.NestedScrollView
      android:layout_height="match_parent"
      android:layout_width="match_parent">

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/objects"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    </androidx.core.widget.NestedScrollView>

  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/propertyLayout"
    android:layout_height="0dp"
    android:layout_width="200dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/surface"
    app:layout_constraintTop_toBottomOf="@+id/appBar">

    <androidx.core.widget.NestedScrollView
      android:id="@+id/objectPropertyLayout"
      android:padding="8dp"
      android:layout_height="match_parent"
      android:layout_width="match_parent">

      <EditText
        android:id="@+id/objectName"
        android:background="@color/primaryVariantColor"
        android:layout_height="50dp"
        android:padding="8dp"
        android:imeOptions="actionGo|flagNoFullscreen"
        android:singleLine="true"
        android:layout_width="match_parent" />

      <EditText
        android:id="@+id/objectPositionX"
        android:background="@color/primaryVariantColor"
        android:layout_height="50dp"
        android:padding="8dp"
        android:imeOptions="actionGo|flagNoFullscreen"
        android:singleLine="true"
        android:layout_width="wrap_content" />

      <EditText
        android:id="@+id/objectPositionY"
        android:background="@color/primaryVariantColor"
        android:layout_height="50dp"
        android:padding="8dp"
        android:imeOptions="actionGo|flagNoFullscreen"
        android:singleLine="true"
        android:layout_width="wrap_content" />

    </androidx.core.widget.NestedScrollView>

  </androidx.constraintlayout.widget.ConstraintLayout>

  <android.opengl.GLSurfaceView
    android:id="@+id/surface"
    android:layout_height="0dp"
    android:layout_width="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/propertySeparator"
    app:layout_constraintStart_toEndOf="@+id/objectSeparator"
    app:layout_constraintTop_toBottomOf="@+id/appBar" />

  <View
    android:id="@+id/objectSeparator"
    android:layout_height="0dp"
    android:layout_width="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/surface"
    app:layout_constraintStart_toEndOf="@+id/objectLayout"
    app:layout_constraintTop_toBottomOf="@+id/appBar"
    android:background="@color/primaryVariantColor" />

  <View
    android:id="@+id/propertySeparator"
    android:layout_height="0dp"
    android:layout_width="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/propertyLayout"
    app:layout_constraintStart_toEndOf="@+id/surface"
    app:layout_constraintTop_toBottomOf="@+id/appBar"
    android:background="@color/primaryVariantColor" />

</androidx.constraintlayout.widget.ConstraintLayout>