<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.frio.neptune"
    android:versionCode="2"
    android:versionName="0.2.0-alpha" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="32" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="com.frio.neptune.AndroidApplication"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_rounded"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.frio.neptune.activity.MainActivity"
            android:configChanges="screenSize|uiMode"
            android:exported="true"
            android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.frio.neptune.activity.EditorActivity"
            android:configChanges="screenSize|uiMode"
            android:exported="false"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.frio.neptune.DebugActivity"
            android:configChanges="screenSize|uiMode"
            android:exported="false"
            android:screenOrientation="sensorPortrait" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.frio.neptune.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>